<p id="notice"><%= notice %></p>

<h1>Chamados</h1>

<table>
  <thead>
    <tr>
      <th>Fornecedor</th>
      <th>Cliente</th>
      <th>Site</th>
      <th>Endereco</th>
      <th>Bairro</th>
      <th>Cep</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Tecnico</th>
      <th>Data</th>
      <th>Numero</th>
      <th>Nfornecedor</th>
      <th>Ncliente</th>
      <th>Observacao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chamados.each do |chamado| %>
      <tr>
        <td><%= chamado.fornecedor %></td>
        <td><%= chamado.cliente %></td>
        <td><%= chamado.site %></td>
        <td><%= chamado.endereco %></td>
        <td><%= chamado.bairro %></td>
        <td><%= chamado.cep %></td>
        <td><%= chamado.cidade %></td>
        <td><%= chamado.estado %></td>
        <td><%= chamado.tecnico %></td>
        <td><%= chamado.data %></td>
        <td><%= chamado.numero %></td>
        <td><%= chamado.nfornecedor %></td>
        <td><%= chamado.ncliente %></td>
        <td><%= chamado.observacao %></td>
        <td><%= link_to 'Show', chamado %></td>
        <td><%= link_to 'Edit', edit_chamado_path(chamado) %></td>
        <td><%= link_to 'Destroy', chamado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

